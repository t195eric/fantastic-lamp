<!DOCTYPE html>

<html>
  <head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="http://vjs.zencdn.net/5.12.6/video-js.css" rel="stylesheet">
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <!--<link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css"> -->
    <!--<script src="//code.jquery.com/jquery-1.12.4.js"></script> -->
    
    <title>Flixter</title>
  </head>

  <body>
    <nav class="navbar navbar-expand-sm navbar-dark bg-dark navbar-fixed-top">

      <div class = "container-fluid">
        <%= link_to 'Flixter', root_url, class: 'navbar-brand' %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#MENUBAR" aria-controls="MENUBAR" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="MENUBAR">
          <ul class="navbar-nav ml-auto mt-2 mt-sm-0">
            <li class="nav-item">
              <%= link_to 'All Courses', courses_path, class: 'btn btn-sm btn-dark' %></li>
              <% if user_signed_in? %>
                <li class="nav-item">
                    <%= link_to 'Dashboard', dashboard_path, class: 'btn btn-sm btn-dark' %>
                </li>
                <li class="nav-item">
                  <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: 'btn btn-sm btn-info' %>
                </li>
              <% else %>
              <li class="nav-item">
                <%= link_to 'Sign In', new_user_session_path,  class: 'btn btn-sm btn-info' %>
              </li>
              <li class="nav-item">
                <%= link_to 'Sign up!', new_user_registration_path, class: 'btn btn-sm btn-info' %>
              </li>
              <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <div id= "flex-content-container">


    <% if notice.present? %>
    <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
    <p class="alert alert-danger"><%= alert %></p>
    <% end %>


    <%= yield %>
  </div>

  <div id="footer">
    <div class = "container">
       <div class="row">
        <div class="col-12 col-sm-3">
          <b>Teachers</b>
          <br />
          <%= link_to 'Teach a Course', new_instructor_course_path %>
          <br />
          <%= link_to 'My Dashboard', dashboard_path %>
        </div>
        <div class="col-12 col-sm-3">
          <b>About</b>
          <br />
          <%= link_to 'Team', '#' %>
          <br />
          <%= link_to 'Careers', '#' %>
          <br />
          <%= link_to 'Privacy Policy', '#' %>
        </div>
        <div class="col-12 col-sm-3">
          <b>Contact</b>
          <br />
          my@email.com
          <br />
          One Kendall Square
          <br />
          Cambridge MA, 02113
        </div>
        <div class="col-12 col-sm-3 social">
          <b>Social</b>
          <br />
          <br />
          <%= link_to 'http://github.com/t195eric' do %>
            <span class="fa fa-github-square fa-2x social-button"></span>
          <% end %>
          <span class="fa fa-github-square fa-2x social-button"></span>
          <span class="fa fa-facebook-square fa-2x social-button"></span>
          <span class="fa fa-twitter-square fa-2x social-button"></span>
        </div>
      </div>
    </div>
  </div>
    
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <script src="http://vjs.zencdn.net/5.12.6/video.js"></script>
    <script src="http://vjs.zencdn.net/ie8/1.1.2/videojs-ie8.min.js"></script>

</body>
</html>
